package com.scb.axcessspringb.repository;

import com.scb.axcessspringb.model.Approver;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface ApproverRepository extends JpaRepository<Approver, Long> {
    // Use nested property path: batch.id
    List<Approver> findByBatch_Id(String batchId);

    // (Optional) if you want them ordered by level:
    // List<Approver> findByBatch_IdOrderByLevelAsc(String batchId);
}
